{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "bin"]
}
